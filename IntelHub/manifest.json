{
  "manifest_version": 3,
  "name": "IntelHub",
  "description": "Your personal OSINT toolkit inside the browser.",
  "version": "2.0",
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "downloads",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
  {
    "resources": ["libs/single-file.js"],
    "matches": ["<all_urls>"]
  }
  ]
}
